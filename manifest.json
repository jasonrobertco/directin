{
  "manifest_version": 3,
  "name": "Get Off LinkedIn",
  "description": "Show real job openings and get off LinkedIn.",
  "version": "0.1",

  "permissions": ["storage"],
  "host_permissions": ["https://boards.greenhouse.io/*"],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["content.js"]
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["overlay.html", "overlay.css", "overlay.js"],
      "matches": ["https://www.linkedin.com/*"]
    }
  ]
}
